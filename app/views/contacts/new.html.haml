%h1
  = t('contact.create_contact')

- if current_user.present?
  %div.container
    %div.singular-layout-grid
      %div.child
        = render 'form'

  %br
  //separate child card to allow saving of a listing
  %div.container
    %div.singular-layout-grid
      = link_to contacts_path do
        %div.clickable-child
          %h2
            = t('contact.contact_history')
- else
  = render 'shared/prompt_signin'