= form_for @contact, id: 'contact-form', :html => { :id => 'contact-form' }, data: { remote: true } do |f|
  .field
    %h2
      = f.label :title
    %br
    = f.text_field :title
  .field
    %h3
      = f.label :body
    %br
    = f.text_area :body
  .actions
    = f.submit t('contact.submit_form'), remote: true
