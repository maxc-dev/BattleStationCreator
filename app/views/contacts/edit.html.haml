//verifies user is signed in
- if current_user.present?
  //header with contact support ticket id
  %h1
    = t('contact.edit_ticket') + " #(#{@contact.id})"
  %div.container
    %div.singular-layout-grid
      %div.child
        //info about the ticket (title and body)
        = render 'form'

      //links to edit the ticket, and to go back
      = link_to @contact do
        %div.clickable-child
          %h2
            = t('contact.view_ticket')
      = link_to contacts_path do
        %div.clickable-child
          %h2
            = t('contact.contact_history')
- else
  = render 'shared/prompt_signin'